<article class="post">
      <div class="title">
        <h3>{{title}}</h3>
        <p>{{post_content}}</p>
             </div>
      <div class="meta">
        By {{user.user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>