<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <div>
       <label for="post-title">Title</label>
      <input name="post-title" type="text" value="{{post.title}}" />
      </div>
      <div>
         <label for="post-content">Content</label>
      <input name="post-content" type="text" value="{{post.post_content}}" />
      </div>
  
      
    </div>
    <div>
      Created on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{post.comments.length}}</a>
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

{{> comments post.comments}}