<ol class="post-list">
  {{#each posts}}
  <li>
    <article class="post">
      <div class="title">
        <h3>{{title}}</h3>
        <p>{{post.content}}</p>
             </div>
      <div class="meta">
        By {{user.username}} on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>